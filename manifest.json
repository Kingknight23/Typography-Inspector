{
  "manifest_version": 3,
  "name": "Typography Inspector",
  "version": "1.0",
  "description": "typography analysis with web font detection",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icons.png"
    }
  },
  "icons": {
    "16": "icons/icons.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}